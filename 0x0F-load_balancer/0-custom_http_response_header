#!/usr/bin/env bash
# configures a brand new Ubuntu machine to the requirements asked in this task.

#!/usr/bin/env bash

# Update package list and install Nginx on web-01
ssh ubuntu@52.205.94.206 'sudo apt-get update -y && sudo apt-get install nginx -y'
ssh ubuntu@52.205.94.206 'echo "Ceci n'"'"'est pas une page" | sudo tee /var/www/html/custom_404.html'
ssh ubuntu@52.205.94.206 'sudo sed -i "/server_name _;/a \ \ \ \ add_header X-Served-By 387398-web-01;" /etc/nginx/sites-available/default'
ssh ubuntu@52.205.94.206 'sudo systemctl restart nginx'

# Update package list and install Nginx on web-02
ssh ubuntu@52.86.161.51 'sudo apt-get update -y && sudo apt-get install nginx -y'
ssh ubuntu@52.86.161.51 'echo "Ceci n'"'"'est pas une page" | sudo tee /var/www/html/custom_404.html'
ssh ubuntu@52.86.161.51 'sudo sed -i "/server_name _;/a \ \ \ \ add_header X-Served-By 387398-web-02;" /etc/nginx/sites-available/default'
ssh ubuntu@52.86.161.51 'sudo systemctl restart nginx'
