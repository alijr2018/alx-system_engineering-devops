#!/usr/bin/env bash
# This script that :
# Displays To infinity and beyond indefinitely
# Displays I hate the kill command when receiving a SIGTERM signal
# Displays Y U no love me?! when receiving a SIGINT signal
# Deletes the file /var/run/myscript.pid and terminates itself when receiving a SIGQUIT or SIGTERM signal

# Function to handle SIGTERM and SIGQUIT signals
function handle_sigterm_quit {
    echo "I hate the kill command"
    cleanup_and_exit
}

# Function to handle SIGINT signal
function handle_sigint {
    echo "Y U no love me?!"
}

# Function to cleanup and exit the script
function cleanup_and_exit {
    # Delete the PID file if it exists
    if [ -f "/var/run/myscript.pid" ]; then
        rm "/var/run/myscript.pid"
    fi
    exit 0
}

# Trap signals and call the appropriate handler functions
trap handle_sigterm_quit SIGTERM SIGQUIT
trap handle_sigint SIGINT

# Create the PID file
echo "$$" > /var/run/myscript.pid

# Display the message
while true; do
    echo "To infinity and beyond"
    sleep 1
done

# Clean up and exit the script (this part will never be reached in the loop)
cleanup_and_exit